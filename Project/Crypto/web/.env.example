# Environment Variables for Crypto Trading Web Dashboard

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Database Configuration
DATABASE_URL=sqlite:///data/crypto_trading.db

# Security Configuration
SESSION_TIMEOUT=1800  # 30 minutes in seconds
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# Trading System Configuration
TRADING_SYSTEM_HOST=localhost
TRADING_SYSTEM_PORT=8888
TRADING_SYSTEM_API_KEY=your-trading-system-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/crypto_trading.log

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_LOGIN=5  # requests per minute
RATE_LIMIT_API=30   # requests per minute

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Domain Configuration
DOMAIN_NAME=your-domain.com
ADMIN_EMAIL=admin@your-domain.com