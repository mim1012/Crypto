{
  "environment": "development",
  "exchanges": {
    "binance": {
      "name": "binance",
      "api_key": "YOUR_BINANCE_API_KEY",
      "api_secret": "YOUR_BINANCE_API_SECRET",
      "testnet": true,
      "rate_limit": 1200,
      "timeout": 30.0,
      "retry_attempts": 3
    },
    "bybit": {
      "name": "bybit",
      "api_key": "YOUR_BYBIT_API_KEY",
      "api_secret": "YOUR_BYBIT_API_SECRET",
      "testnet": true,
      "rate_limit": 1200,
      "timeout": 30.0,
      "retry_attempts": 3
    }
  },
  "trading": {
    "enabled_pairs": ["BTCUSDT", "ETHUSDT", "ADAUSDT", "DOTUSDT", "LINKUSDT"],
    "default_leverage": 1.0,
    "max_positions": 10,
    "position_size_pct": 0.02,
    "stop_loss_pct": 0.03,
    "take_profit_pct": 0.06,
    "max_daily_trades": 50,
    "trading_hours_start": "00:00",
    "trading_hours_end": "23:59",
    "allowed_weekdays": [0, 1, 2, 3, 4, 5, 6]
  },
  "risk": {
    "max_capital_risk_pct": 0.02,
    "max_portfolio_risk_pct": 0.20,
    "max_drawdown_pct": 0.15,
    "max_daily_loss_pct": 0.05,
    "correlation_limit": 0.7,
    "leverage_limit": 10.0,
    "emergency_stop_enabled": true
  },
  "security": {
    "jwt_secret_key": "dev-jwt-secret-key",
    "jwt_expiration_hours": 24,
    "encryption_enabled": true,
    "api_rate_limiting": true,
    "allowed_ips": [],
    "session_timeout_minutes": 60,
    "require_2fa": false
  },
  "logging": {
    "level": "INFO",
    "file_path": "logs/trading.log",
    "max_file_size_mb": 100,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "console_output": true,
    "file_output": true
  },
  "database": {
    "enabled": true,
    "type": "sqlite",
    "host": "localhost",
    "port": 5432,
    "database": "trading_development",
    "username": "",
    "password": "",
    "connection_pool_size": 10
  },
  "notifications": {
    "email_enabled": false,
    "email_smtp_server": "",
    "email_port": 587,
    "email_username": "",
    "email_password": "",
    "email_recipients": [],
    "telegram_enabled": false,
    "telegram_bot_token": "",
    "telegram_chat_ids": [],
    "discord_enabled": false,
    "discord_webhook_url": "",
    "notification_levels": ["ERROR", "CRITICAL"]
  },
  "web": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "debug": true,
    "secret_key": "dev-web-secret-key",
    "cors_enabled": true,
    "rate_limiting": true,
    "auth_required": true
  },
  "version": "1.0.0"
}